{
  "name": "tap",
  "private": true,
  "dependencies": {
    "@ericblade/quagga2": "^1.12.0",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@hotwired/turbo-rails": "^8.0.20",
    "@rails/ujs": "^7.1.3-4",
    "bulma": "^1.0.4",
    "chart.js": "^4.5.1",
    "chartkick": "^5.0.1",
    "esbuild": "^0.27.2",
    "mqtt": "^5.14.1",
    "petite-vue": "^0.4.1",
    "sass": "^1.97.1",
    "vanilla-nested": "^1.7.1"
  },
  "scripts": {
    "build:js": "esbuild ./app/assets/javascript/application.js --public-path=/assets --outdir=./app/assets/builds/ --bundle --minify",
    "watch:js": "esbuild ./app/assets/javascript/application.js --public-path=/assets --outdir=./app/assets/builds/ --bundle --watch=forever",
    "build:css": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --load-path=node_modules --quiet-deps --style=compressed --no-source-map",
    "watch:css": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --load-path=node_modules --quiet-deps --watch --poll"
  }
}
