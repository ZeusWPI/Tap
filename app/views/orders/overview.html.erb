<div class="columns is-multiline">

	<!-- Recent orders -->
  <div class="column is-1 is-hidden-touch">
    <div class="order-overview-recent">
      <% unless @last.empty? %>
        <h4 class="title is-size-6">Recent</h4>

        <div class="order-overview-recent-avatars">
          <% @last.each do |user| %>
            <%= image_tag user.avatar(:small), class: "order-overview-recent-avatar" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

	<!-- Users -->
  <div class="column is-11">
    <div class="order-overview-users card">
      <div class="card-content has-text-centered">

        <h1 class="title is-size-1" style="color: #007bff">
          Hydra Codenight
        </h1>

        <p class="subtitle is-size-3">
          We voorzien gratis snacks en drinks voor de Hydra Codenight.
        <p>

        <%= link_to "Click here to order", new_user_order_path(User.guest), class: "button is-large is-info" %>
      </div>
    </div>
  </div>
</div>
